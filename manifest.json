{
  "manifest_version": 3,
  "name": "VietDoodle Gallery",
  "version": "1.0",
  "description": "Change Google Doodle",
  "action": {
    "default_popup": "index.html",
    "icons":  "./img/logo.png"

  
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "menus"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "popup.js",
        "changeTab.js",
        "size.js"
      ]
    }
  ]
}